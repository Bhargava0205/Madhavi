<div class="bg-overlay" id="bg-overlay"></div>

<!-- Background Video (or Image) -->
<video class="bg-video" id="bg-video" loop muted>
  <source src="your-video.mp4" type="video/mp4">
  Your browser does not support the video tag.
</video>

<!-- If you prefer an image instead of a video, uncomment the following line -->
<!-- <img src="your-image.jpg" class="bg-image" id="bg-image" alt="Background Image"> -->

<script>
  const boxes = document.querySelectorAll('.box');
  const questionContainer = document.getElementById('question');
  const finalMessage = document.getElementById('final-message');
  const correctOption = document.getElementById('correct-option');
  const bgVideo = document.getElementById('bg-video');
  const bgOverlay = document.getElementById('bg-overlay');
  const bgImage = document.getElementById('bg-image'); // If using an image instead of video

  // Function to reset everything back to the beginning
  function resetPage() {
    boxes.forEach(box => box.classList.remove('flipped'));
    questionContainer.style.display = 'none';
    finalMessage.style.display = 'none';
    bgOverlay.style.display = 'none';
    if (bgVideo) {
      bgVideo.pause();
      bgVideo.currentTime = 0;
      bgVideo.style.display = 'none';
    }
    if (bgImage) {
      bgImage.style.display = 'none';
    }
  }

  // Flip effect for the boxes
  boxes.forEach(box => {
    box.addEventListener('click', () => {
      box.classList.add('flipped');
      setTimeout(() => {
        questionContainer.style.display = 'block';
      }, 1000);
    });
  });

  // Correct option
  correctOption.addEventListener('click', () => {
    questionContainer.style.display = 'none';
    finalMessage.style.display = 'block';
    bgOverlay.style.display = 'block'; // Show dimmed overlay
    if (bgVideo) {
      bgVideo.style.display = 'block';
      bgVideo.play();  // Video will play in the background
    }
    if (bgImage) {
      bgImage.style.display = 'block'; // Image will display in the background
    }
    // After 5 seconds, reset the page
    setTimeout(() => {
      finalMessage.style.display = 'none';
      resetPage();
    }, 5000);
  });
</script>

</body>
